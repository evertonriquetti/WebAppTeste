<h1 class="display-3">Relatório de Usuários</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Gênero</th>
            <th>CPF</th>
            <th>Email</th>
            <th>Celular</th>
            <th>Endereço</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>CEP</th>
            <th>País</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.id</td>
                <td>@user.name</td>
                <td>@user.gender</td>
                <td>@user.cpf</td>
                <td>@user.email</td>
                <td>@user.cell</td>
                <td>@user.address</td>
                <td>@user.city</td>
                <td>@user.state</td>
                <td>@user.postcode</td>
                <td>@user.country</td>
                <td>
                    <a href="@Url.Action("EditUser", new { id = user.id })">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

